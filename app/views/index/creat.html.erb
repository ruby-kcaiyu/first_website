<div class="span6 offset6">
<div class="login">
<h2>Login</h2>

<%=form_for :user do |f|%>
		<legend>Enter Your Detials</legend>
		<%=f.label :Name%>
		<%=f.text_field :name%>
		
		<%=f.label :Password%>
		<%=f.password_field :password%><br>
		
	<br>	<%=submit_tag "Login", class: "btn btn-large btn-primary"%>
<%end%>
<li> <%=link_to("还没有注册？",{action: "register"})%></li>
 </div>
 </div>
